<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.device.aquafox.fragment.DetalleServiceFragment"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical">
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:src="@drawable/medidor2"/>

            <EditText
                android:id="@+id/serviceNombre"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="160dp"
                android:hint="Email"
                android:textColorHint="#208FFF"
                android:background="#00000000"
                android:letterSpacing="0.1"
                android:textSize="16dp"
                android:inputType="text"
                android:textColor="@color/colorPrimary"
                />
            <!--
            <TextView
                android:id="@+id/serviceNombre"
                android:layout_marginTop="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Servicio"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="21sp"/>
            -->

        </LinearLayout>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="15dp">
        <LinearLayout
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:paddingLeft="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:layout_width="120dp"
                android:layout_height="36dp"
                android:paddingLeft="10dp"
                android:text="Dispositivo"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/serviceSerie"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:paddingLeft="20dp"
                android:text="Serie"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:paddingLeft="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:layout_width="120dp"
                android:layout_height="36dp"
                android:paddingLeft="10dp"
                android:text="DirecciÃ³n"
                android:textColor="@color/colorPrimary" />
            <TextView
                android:id="@+id/serviceDireccion"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:paddingLeft="20dp"
                android:text="Lima"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:paddingLeft="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:layout_width="120dp"
                android:layout_height="36dp"
                android:paddingLeft="10dp"
                android:text="Consumo (LT)"
                android:textColor="@color/colorPrimary" />
            <TextView
                android:textStyle="bold"
                android:id="@+id/serviceConsumo"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:paddingLeft="20dp"
                android:text="0"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:paddingLeft="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:layout_width="120dp"
                android:layout_height="36dp"
                android:paddingLeft="10dp"
                android:text="Inicio / Fin"
                android:textColor="@color/colorPrimary" />
            <TextView
                android:textStyle="bold"
                android:id="@+id/serviceFecha"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:paddingLeft="20dp"
                android:text="dd/mm/yyyy"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:paddingLeft="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <Button
                android:id="@+id/update"
                android:layout_height="wrap_content"
                android:layout_width="160dp"
                android:background="@drawable/boton_redondo"
                android:layout_marginLeft="80dp"
                android:gravity="center"
                android:letterSpacing="0.2"
                android:padding="16dp"
                android:paddingLeft="10dp"
                android:text="Actualizar"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />
<!--
            <Button
                android:id="@+id/cancel"
                android:layout_height="wrap_content"
                android:layout_width="120dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/boton_redondo"
                android:text="Cancelar"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="16dp"
                android:letterSpacing="0.2"/>
-->
        </LinearLayout>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBarServices"
        android:progressDrawable="@drawable/progress1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        />
</LinearLayout>